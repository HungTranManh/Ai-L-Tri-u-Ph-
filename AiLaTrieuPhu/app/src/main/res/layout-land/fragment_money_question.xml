<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_money">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_15"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/colorTextMoney"
        android:text="15 150.000.000"/>
    <TextView
        android:id="@+id/tv_14"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorString"
        android:text="14 85.000.000"
        />
    <TextView
        android:id="@+id/tv_13"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorString"
        android:text="13 60.000.000"
        />
    <TextView
        android:id="@+id/tv_12"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorString"
        android:text="12 40.000.000"
        />
    <TextView
        android:id="@+id/tv_11"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorString"
        android:gravity="center"
        android:text="11 30.000.000"
        />
    <TextView
        android:id="@+id/tv_10"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorTextMoney"
        android:gravity="center"
        android:text="10 22.000.000"
        />
    <TextView
        android:id="@+id/tv_9"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorString"
        android:gravity="center"
        android:text="09 14.000.000"
        />
    <TextView
        android:id="@+id/tv_8"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorString"
        android:gravity="center"
        android:text="08 10.000.000"
        />
    <TextView
        android:id="@+id/tv_7"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorString"
        android:gravity="center"
        android:text="07 6.000.000"
        />
    <TextView
        android:id="@+id/tv_6"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorString"
        android:gravity="center"
        android:text="06 3.000.000"
        />
    <TextView
        android:id="@+id/tv_5"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/colorTextMoney"
        android:text="05 2.000.000"
        />
    <TextView
        android:id="@+id/tv_4"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorString"
        android:text="04 1.000.000"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorString"
        android:text="03 600.000"
        />
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorString"
        android:gravity="center"
        android:text="02 400.000"
        />
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorString"
        android:text="01 200.000"
        />
    </LinearLayout>
    <Button
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:id="@+id/btn_next"
        android:text="Next"
        android:textAllCaps="false"
        android:background="@drawable/background_button_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/icon_next"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>